<h1>Burger Time</h1>


<div><img
    src="https://images.unsplash.com/photo-1586816001966-79b736744398?ixid=MXwxMjA3fDB8MHxzZWFyY2h8Nnx8YnVyZ2VyfGVufDB8fDB8&ixlib=rb-1.2.1&w=1000&q=80"
    alt="burger photo" class="burgDisplay"></div>

<section class="container">
  <div class="first">
    <h2>Burger Suggestions</h2>
    <ul>
      {{#each burgers}}
      {{#unless devoured}}
      {{> burger/burger-block devoured=true}}
      {{/unless}}
      {{/each}}
    </ul>
  </div>
  <div class="second">
    <h2>Delicious Burgers</h2>

    <ul>
      {{#each burgers}}
      {{#if devoured}}
      {{> burger/burger-block devoured=false}}
      {{/if}}
      {{/each}}
    </ul>
  </div>
</section>
<div class="add">
<h2>Add a Burger</h2>
<form class="create-form">

  <div class="form-group">
    <label for="ca">Burger Name:</label>
    <input type="text" id="ca" name="name">
  </div>

  <div class="form-group">
    <label for="devoured">Interested?</label><br>
    <input type="radio" name="devoured" value="1" checked> Delicious!<br>
    <input type="radio" name="devoured" value="0"> Suggested
  </div>

  <button type="submit">Add Burger</button>
</form>
</div>